    <%= simple_form_for @profile, defaults: { input_html: { class: 'form-control' } } do |f| %>
      <%= f.input :dob,as: :string, input_html: { class: 'form-control datepicker' } %>
      <%= f.input :age, collection: 18..60 %>
      <%= f.input :phone %>
      <%= f.input :sex, collection: ["Male", "Female"] %>
      <%= f.input :height %>
      <%= f.input :weight %>
      <%= f.input :hobby %>
      <%= f.input :location %>
      <%= f.input :hometown %>
      <%= f.input :content %>
      <%= f.input :looking_for %>
      <%= f.button :submit %>
    <% end %>
    
</div>
            
    